{
  "name": "thescale-app",
  "version": "1.0.0",
  "description": "Desktop app for Xiaomi Mi Body Composition Scale S400",
  "main": "dist/main/main.cjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "./scripts/dev.sh",
    "dev:broken": "npm run build:main && NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "dev:watch": "npm run build:main -- --watch",
    "dev:full": "concurrently \"npm run dev:renderer\" \"npm run dev:watch\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "npx esbuild src/main/main.ts --bundle --platform=node --target=node18 --outfile=dist/main/main.cjs --format=cjs --external:electron --external:@stoprocent/noble --sourcemap && npx esbuild src/main/preload.ts --bundle --platform=node --target=node18 --outfile=dist/main/preload.cjs --format=cjs --external:electron --sourcemap && npx esbuild src/main/ble/ble-worker.ts --bundle --platform=node --target=node18 --outfile=dist/main/ble/ble-worker.cjs --format=cjs --external:electron --external:@stoprocent/noble --sourcemap",
    "build:renderer": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "test-data:generate": "npx ts-node --esm scripts/test-data/generator.ts --generate",
    "test-data:remove": "npx ts-node --esm scripts/test-data/generator.ts --remove",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --publish always"
  },
  "keywords": [
    "electron",
    "desktop",
    "macos",
    "body-composition",
    "xiaomi",
    "scale"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.19.30",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.19",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@stoprocent/noble": "^2.3.10",
    "@types/qrcode": "^1.5.6",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.19",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "recharts": "^2.15.4",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  }
}
