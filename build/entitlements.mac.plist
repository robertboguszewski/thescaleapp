<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow unsigned executables in app bundle -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation for V8 -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Hardened runtime compatibility -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Bluetooth access for BLE communication with Mi Scale -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>

    <!-- Network access for cloud sync features -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for data storage -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Access to downloads folder for backup export -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
</dict>
</plist>
